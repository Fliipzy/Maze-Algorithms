<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<BorderPane prefHeight="500.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/8.0.112-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <center>
      <Canvas fx:id="canvas" height="400.0" width="400.0" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <Pane prefHeight="65.0" prefWidth="450.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnGenerate" layoutX="30.0" layoutY="-12.0" mnemonicParsing="false" onMouseClicked="#OnGenerateBtnClick" text="Generate" />
            <ComboBox fx:id="comboBoxAlgorithm" onAction="#InputMethodChanged" layoutX="103.0" layoutY="-12.0" prefWidth="150.0" />
            <Button fx:id="btnSolve" onMouseClicked="#DrawPath" layoutX="379.0" layoutY="-12.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="50.0" text="Solve" />
            <Spinner fx:id="sizeUpDown"  layoutX="260.0" layoutY="-12.0" prefHeight="25.0" prefWidth="76.0" />
         </children>
      </Pane>
   </bottom>
</BorderPane>
